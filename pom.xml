<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>edu.pjwstk</groupId>
    <artifactId>gami-life</artifactId>
    <version>0.0.1-alpha-v01</version>
    <packaging>pom</packaging>

    <modules>
        <module>api</module>
        <module>application</module>
        <module>infrastructure</module>
        <module>modules</module>
    </modules>
    <name>GamiLife</name>
    <description>Backend application GamiLife</description>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>3.5.7</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>org.springdoc</groupId>
                <artifactId>springdoc-openapi-bom</artifactId>
                <version>2.8.14</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <!-- Business Modules -->
            <dependency>
                <groupId>edu.pjwstk</groupId>
                <artifactId>auth</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>edu.pjwstk</groupId>
                <artifactId>gamification</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>edu.pjwstk</groupId>
                <artifactId>group-shop</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>edu.pjwstk</groupId>
                <artifactId>group-tasks</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>edu.pjwstk</groupId>
                <artifactId>groups</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>edu.pjwstk</groupId>
                <artifactId>pomodoro</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>edu.pjwstk</groupId>
                <artifactId>tasks</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>edu.pjwstk</groupId>
                <artifactId>user</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>edu.pjwstk</groupId>
                <artifactId>communication</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- API Modules -->
            <dependency>
                <groupId>edu.pjwstk</groupId>
                <artifactId>auth-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>edu.pjwstk</groupId>
                <artifactId>gamification-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>edu.pjwstk</groupId>
                <artifactId>group-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>edu.pjwstk</groupId>
                <artifactId>group-shop-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>edu.pjwstk</groupId>
                <artifactId>pomodoro-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>edu.pjwstk</groupId>
                <artifactId>task-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>edu.pjwstk</groupId>
                <artifactId>user-api</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- Infrastructure Modules -->
            <dependency>
                <groupId>edu.pjwstk</groupId>
                <artifactId>infrastructure-core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>edu.pjwstk</groupId>
                <artifactId>infrastructure-data</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>edu.pjwstk</groupId>
                <artifactId>infrastructure-web</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <properties>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <annotationProcessorPaths>
                        <path>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                        </path>
                    </annotationProcessorPaths>
                    <parameters>true</parameters>
                </configuration>
                <version>3.14.1</version>
            </plugin>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                        </exclude>
                    </excludes>
                </configuration>
                <version>3.5.6</version>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>prod</id>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </profile>
    </profiles>

</project>
